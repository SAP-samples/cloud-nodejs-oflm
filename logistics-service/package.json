{
    "author": "",
    "dependencies": {
        "@nestjs/common": "^8.0.6",
        "@nestjs/core": "^8.0.6",
        "@nestjs/platform-express": "^8.0.6",
        "@nestjs/swagger": "^5.0.9",
        "@sap-cloud-sdk/core": "^1.49.0",
        "@sap/hdbext": "^7.3.1",
        "@sap/xsenv": "^3.1.1",
        "@sap/xssec": "^3.2.2",
        "axios": "^0.22.0",
        "class-validator": "^0.13.1",
        "passport": "^0.4.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.3.0",
        "swagger-ui-express": "^4.0.2",
        "uuid": "^8.3.2"
    },
    "description": "",
    "devDependencies": {
        "@nestjs/cli": "^8.1.2",
        "@nestjs/schematics": "^8.0.3",
        "@nestjs/testing": "^8.0.6",
        "@sap-cloud-sdk/test-util": "^1.49.0",
        "@types/express": "^4.17.13",
        "@types/jest": "27.0.1",
        "@types/node": "^16.7.2",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "3.0.2",
        "@typescript-eslint/parser": "3.0.2",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "jest": "27.1.0",
        "jest-junit": "^13.0.0",
        "prettier": "^2.3.2",
        "supertest": "^6.1.6",
        "ts-jest": "27.0.5",
        "ts-loader": "^9.2.5",
        "ts-node": "^10.2.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "jest": {
        "collectCoverage": true,
        "coverageDirectory": "../s4hana_pipeline/reports/coverage-reports/backend-unit",
        "coverageReporters": [
            "text",
            "cobertura"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "reporters": [
            "default",
            [
                "jest-junit",
                {
                    "outputDirectory": "./s4hana_pipeline/reports/backend-unit",
                    "suiteName": "backend unit tests"
                }
            ]
        ],
        "rootDir": "src",
        "testEnvironment": "node",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        }
    },
    "license": "UNLICENSED",
    "name": "logistics-service",
    "private": true,
    "scripts": {
        "build": "nest build",
        "ci-backend-unit-test": "jest --ci",
        "ci-build": "npm run build",
        "ci-integration-test": "jest --ci --config ./test/jest-e2e.json",
        "ci-package": "sap-cloud-sdk package --ci",
        "deploy": "npm run build && sap-cloud-sdk package && cf push",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "prebuild": "rimraf dist",
        "start": "nest start",
        "start:debug": "nest start --debug --watch",
        "start:dev": "nest start --watch",
        "start:prod": "node dist/main",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "test:watch": "jest --watch"
    },
    "version": "0.0.1"
}
